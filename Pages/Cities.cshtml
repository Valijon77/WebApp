@page
@*@inject CitiesData Data*@
@model CitiesModel

<div class="m-2">
    <table class="table table-sm table-striped table-bordered">
        <tbody>
            @foreach (City c in Model.Data?.Cities ?? Enumerable.Empty<City>())
            {
                <tr>
                    <td>@c.Name</td>
                    <td>@c.Population</td>
                    <td>@c.Country</td>
                </tr>
            }
        </tbody>
    </table>
</div>